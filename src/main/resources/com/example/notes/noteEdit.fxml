<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.HTMLEditor?>

<VBox fx:id="noteEditContainer" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.notes.NoteEditController">
   <children>
      <TextField fx:id="noteEditTitle">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </TextField>
      <HTMLEditor fx:id="noteEditText" htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT">
         <Button fx:id="noteEditSaveBtn" mnemonicParsing="false" onMouseClicked="#saveNote" text="Сохранить" />
         <Button fx:id="noteEditCancelBtn" mnemonicParsing="false" onMouseClicked="#exitFromEditMote" text="Выйти" />
      </HBox>
   </children>
</VBox>
